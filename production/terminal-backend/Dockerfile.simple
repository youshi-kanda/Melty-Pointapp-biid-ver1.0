# BIID Point App - Terminal Backend Dockerfile (Simplified)
FROM python:3.9-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    postgresql-client \
    gettext \
    && rm -rf /var/lib/apt/lists/*

ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Copy and install Python dependencies
COPY backend/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy backend code
COPY backend ./backend

# Copy terminal-backend specific files
COPY production/terminal-backend/terminal_settings.py ./backend/
COPY production/terminal-backend/static ./static
COPY production/terminal-backend/.env.production ./backend/.env

# Create necessary directories
RUN mkdir -p /var/log/biid static media

WORKDIR /app/backend

ENV DJANGO_SETTINGS_MODULE=terminal_settings
ENV PORT=8000

EXPOSE 8000

# Run migrations and start server
CMD python manage.py migrate --noinput && \
    python manage.py collectstatic --noinput && \
    gunicorn --bind 0.0.0.0:8000 --workers 3 --timeout 120 pointapp.wsgi:application
